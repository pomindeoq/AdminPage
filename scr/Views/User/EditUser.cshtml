@model AdminPage.Models.User
@{
    Layout = null;
}

@using (Html.BeginForm("EditUser", "User", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new {@class="control-label"})
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-cotrol"} })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "control-label" })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-cotrol" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Points, new { @class = "control-label" })
        @Html.EditorFor(model => model.Points, new { htmlAttributes = new { @class = "form-cotrol" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary"/>
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
}


